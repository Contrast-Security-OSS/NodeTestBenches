{
  "express": {
    "view cache": false,
    "view engine": "ejs",
    "views": "path:./public/templates"
  },
  "view engines": {
    "ejs": {
      "name": "ejs",
      "module": "ejs",
      "renderer": "renderFile"
    }
  },
  "middleware": {
    "appsec": {
      "module": {
        "name": "lusca",
        "arguments": [
          {
            "csrf": {
              "blacklist": [
                "/xss/body",
                "/xss/cookies",
                "/unsafeFileUpload/body"
              ]
            },
            "xssProtection": true,
            "p3p": false,
            "csp": false,
            "xframe": "SAMEORIGIN"
          }
        ]
      }
    },
    "router": {
      "module": {
        "arguments": [{ "directory": "path:./controllers" }]
      }
    }
  }
}
